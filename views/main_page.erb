<h1>Welcome <%= @user.name %> </h1>
<div class="list-group">
  <h4>Income</h4>
  <% @income_items.each do |thing1| %>
  <div class="list-group-item">
    <a href='/delete_item/<%= thing1.id %>' class="btn btn-sm btn-default complete"><span class="glyphicon glyphicon-ok"> </span></a>
    <%= thing1.amount_in %>
    <%= thing1.from %>
    <%= thing1.received_on %>
    <%= thing1.tagged_to %>
    <%= thing1.grouped_with %>
  </div>
  <% end %>
</div>
<div class="panel">
  <div class="panel-body">
    <h4 class="list-group-item-heading">Add an Income:</h4>
    <form class="form-inline" action='/new_income' method='POST'>
      <div class="form-group">
        <input class="form-control" type='number' name='money' placeholder='$ Amount' />
      </div>
      <div class="form-group">
        <input class="form-control" type='text' name='description' placeholder='Description' />
      </div>
    </div>
    <div class="form-group">
      <input class="form-control" type='date' name='received_on' placeholder='Date' />
    </div>
      <div class="form-group">
        <input class="form-control" type='text' name='tag' placeholder='Tag' />
      </div>
      <div class="form-group">
        <input class="form-control" type='text' name='group' placeholder='Group' />
      </div>
      <button type='submit' class="btn btn-primary">Save</button>
    </form>
  </div>
</div>
<p>
  <a href="/logout" class="btn btn-default">logout</a>
  <a href="/delete_user" class="btn btn-danger">delete my account</a>
</p>
