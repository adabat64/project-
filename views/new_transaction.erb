<h1>Add a new transaction </h1>

<div class="panel">
  <div class="panel-body">
    <h4 class="list-group-item-heading">Add an Income:</h4>
    <form class="form-inline" action='/new_income' method='POST'>
      <div class="form-group">
        <input class="form-control" type='number' name='money' placeholder='$ Amount' />
      </div>
      <div class="form-group">
        <input class="form-control" type='text' name='description' placeholder='Description' />
      </div>
    </div>
    <div class="form-group">
      <input class="form-control" type='date' name='date' placeholder='Date' />
    </div>
      <!-- <div class="form-group">
        <input class="form-control" type='text' name='tag' placeholder='Tag' />
      </div> -->
      <div class="form-group">
        <input class="form-control" type='text' name='group' placeholder='Link to Budget' />
      </div>
      <button type='submit' class="btn btn-primary">Save</button>
    </form>
  </div>

<div class="panel">
  <div class="panel-body">
    <h4 class="list-group-item-heading">Add an Expense:</h4>
    <form class="form-inline" action='/new_expense' method='POST'>
      <div class="form-group">
        <input class="form-control" type='number' name='exp_money' placeholder='$ Amount' />
      </div>
      <div class="form-group">
        <input class="form-control" type='text' name='exp_description' placeholder='Description' />
      </div>
    </div>
    <div class="form-group">
      <input class="form-control" type='date' name='exp_date' placeholder='Date' />
    </div>
    <div class="form-group">
      <input class="form-control" type='text' name='exp_tag' placeholder='Tag' />
    </div>
    <div class="form-group">
      <input class="form-control" type='text' name='exp_group' placeholder='Link to Budget' />
    </div>
    <button type='submit' class="btn btn-primary">Save</button>
  </form>
</div>

<div class="panel">
  <div class="panel-body">
    <h4 class="list-group-item-heading">Add a Budget:</h4>
    <form class="form-inline" action='/new_budget' method='POST'>
      <div class="form-group">
        <input class="form-control" type='number' name='bud_money' placeholder='$ Amount' />
      </div>
      <div class="form-group">
        <input class="form-control" type='text' name='bud_description' placeholder='New Budget Name' />
      </div>
    </div>
    <button type='submit' class="btn btn-primary">Save</button>
  </form>
</div>
